<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatifyTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/slate_purple</item>
        <item name="colorPrimaryDark">@color/dark_slate_purple</item>
        <item name="colorAccent">@color/light_blue</item>

        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>

        <item name="android:textViewStyle">@style/RobotoTextView</item>
        <item name="buttonStyle">@style/RobotoButton</item>
        <item name="android:editTextStyle">@style/RobotoEditText</item>
    </style>

    <style name="RobotoTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButton" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoEditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">100dp</item>
    </style>

</resources>
